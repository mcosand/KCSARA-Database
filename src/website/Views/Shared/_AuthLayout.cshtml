@{ 
  var groupName = (System.Configuration.ConfigurationManager.AppSettings["site:groupName"] ?? "King County Search and Rescue");
  var shortName = (System.Configuration.ConfigurationManager.AppSettings["site:shortName"] ?? "King County SAR");
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - @groupName</title>
  <link href="@Url.Content("~/wwwroot/lib/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
  @Styles.Render("~/wwwroot/css/auth-core")
  @RenderSection("head", required: false)
</head>
<body layout="row" ng-app="sarAuth" class="ng-cloak">
  <div layout="column" flex id="content" role="main">
    <md-toolbar class="md-whiteframe-z1 md-primary">
      <div class="md-toolbar-tools">
        @*<md-button class="md-icon-button" aria-label="Settings">
            <md-icon md-svg-icon="/identity/wwwroot/lib/angular-material/img/icons/menu.svg"></md-icon>
          </md-button>*@
        <h2>
          <span hide-xs>@groupName</span>
          <span hide-gt-xs>@shortName</span>
        </h2>
      </div>
    </md-toolbar>
    <md-content layout="column" flex="noshrink" id="content" layout-padding>
      @RenderBody()
    </md-content>
  </div>

  <script src="~/jsconfig"></script>
  @Scripts.Render("~/wwwroot/js/auth-core")
  @RenderSection("scripts", required: false)
</body>
</html>