@{
  ViewBag.Title = Strings.DatabaseName + " Create " + ViewBag.EventType;
  ViewBag.PageModelRequire = "PageModel";
}
<div class="row">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h2 class="panel-title">@string.Format(Strings.EventCreateTemplate, ViewBag.EventType)</h2>
      </div>

      <div class="panel-body" data-bind="component: { name: 'event-quick-create', params: { controller: '@ViewBag.ControllerName', type: '@ViewBag.EventType' }}">@Strings.Loading</div>
    </div>
  </div>
</div>
@section scripts {
  <script type="text/javascript">
    define('PageModel', ['knockout', 'moment', 'site/utils', 'site/components/event-quick-create'], function PageModel(ko, moment, utils) {
      return function () {
      }
    });
  </script>
}
