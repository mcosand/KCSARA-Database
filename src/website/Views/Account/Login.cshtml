@model LoginRequest
@{
    ViewBag.Title = Strings.DatabaseName + " " + Strings.Login;
    
}

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 center-block">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">@Strings.GroupName</h3>
        </div>
        <div class="panel-body">
          <form class="form-horizontal" method="post">
            <div class="form-group@(Html.ValidationErrorFor(f => f.Username, " has-error"))">
              <label for="username" class="col-sm-3 col-md-2 control-label">@Strings.Username:</label>
              <div class="col-sm-9 col-md-10">
                @Html.TextBoxFor(f => f.Username, null, new { @class="form-control", placeholder=Strings.Username})
                @Html.ValidationMessageFor(f => f.Username, null, new { @class="help-block" })
              </div>
            </div>
            <div class="form-group@(Html.ValidationErrorFor(f => f.Password, " has-error"))">
              <label for="password" class="col-sm-3 col-md-2 control-label">@Strings.Password:</label>
              <div class="col-sm-9 col-md-10">
                @Html.PasswordFor(f => f.Password, new { @class = "form-control", placeholder = Strings.Password })
                @Html.ValidationMessageFor(f => f.Password, null, new { @class = "help-block" })
              </div>
            </div>            
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9 col-md-offset-2 col-md-10">
                <div class="row">
                  <div class="col-xs-5">
                    <input type="hidden" name="rememberMe" value="false" />
                    <button type="submit" class="btn btn-default">@Strings.Login</button>
                  </div>
                  <div class="col-xs-7 text-right">
                    <div><small>@(Html.ActionLink<AccountController>(f => f.Register(), Strings.AccountRegisterNew))</small></div>
                    <div><small>@(Html.ActionLink<AccountController>(f => f.ResetPassword(string.Empty), Strings.AccountForgotPassword))</small></div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>